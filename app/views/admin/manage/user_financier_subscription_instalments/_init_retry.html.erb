<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Reprogrammation du prélèvement</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i aria-hidden="true" class="ki ki-close"></i>
            </button>
        </div>
        <div class="modal-body">
            <%= form_for @instalment ,:url => { :controller => "user_financier_subscription_instalments", :action => "submit_retry" }, remote: :true do |f| %>
            <div class="form-group">
                <label for="">Montant
                    <span class="text-danger">*</span></label>
                <%= f.number_field :montant, class: "form-control font-weight-bolder", :disabled=> true  %>
            </div>
            <div class="form-group">
                <label for="">Nouvelle date de prélèvement
                    <span class="text-danger">*</span></label>
                <%= f.date_field :echeance, value: "#{(Date.today + 4.days).strftime("%Y-%m-%d")}", class: "form-control font-weight-bolder", min: "#{(Date.today + 4.days).strftime("%Y-%m-%d")}", :required => true  %>
            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-warning font-weight-bold" data-dismiss="modal">Annuler</button>
            <button type="submit" class="btn btn-success font-weight-bold" value="submit"
                form="edit_user_financier_subscription_instalment_<%= @instalment.id %>">Confirmer</button>
        </div>
        <% end %>
    </div>
</div>