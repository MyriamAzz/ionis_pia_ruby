                                    d="M11.0563554,18.6706981 L5.33593024,14.122919 C4.94553994,13.8125559 4.37746707,13.8774308 4.06710397,14.2678211 C4.06471678,14.2708238 4.06234874,14.2738418 4.06,14.2768747 L4.06,14.2768747 C3.75257288,14.6738539 3.82516916,15.244888 4.22214834,15.5523151 C4.22358765,15.5534297 4.2250303,15.55454 4.22647627,15.555646 L11.0872776,20.8031356 C11.6250734,21.2144692 12.371757,21.2145375 12.909628,20.8033023 L19.7677785,15.559828 C20.1693192,15.2528257 20.2459576,14.6784381 19.9389553,14.2768974 C19.9376429,14.2751809 19.9363245,14.2734691 19.935,14.2717619 L19.935,14.2717619 C19.6266937,13.8743807 19.0546209,13.8021712 18.6572397,14.1104775 C18.654352,14.112718 18.6514778,14.1149757 18.6486172,14.1172508 L12.9235044,18.6705218 C12.377022,19.1051477 11.6029199,19.1052208 11.0563554,18.6706981 Z"
                                    fill="#000000" opacity="0.3"></path>
                            </g>
                        </svg>
                        <!--end::Svg Icon-->
                    </span>
                </span>
            </div>
            <!--end::Pic-->
            <!--begin::Info-->
            <div class="d-flex flex-column mr-auto">
                <!--begin: Title-->
                <span
                    class="card-title text-hover-primary font-weight-bolder font-size-h5 text-dark mb-1"><%= subscription.formation_annee.formation.nom %>
                </span>
                <span class="text-muted font-weight-bold"> <i
                        class="flaticon2-calendar-9 mr-2"></i><%= subscription.s_type.humanize %>
                    <%= subscription.school_year.nom.humanize %>
                    <% if subscription.redoublant %>
                    - Redoublant(e)
                    <% end %>
                </span>
                <!--end::Title-->
            </div>
            <!--end::Info-->
            <!--begin::Toolbar-->
            <div class="card-toolbar mb-auto">
                <% if can? :validate, UserFinancierSubscription and subscription.waiting_admin? %>
                <% link_to admin_manage_student_user_financier_subscription_validate_path(@student.id, subscription.id), method: :put, remote: true, class: "btn btn-light-warning font-weight-bold mr-2", data: {confirm: "Confirmez vous la validation de cette souscription ?"} do %>
                <i class="far fa-check-circle"></i>
                Valider la réduction
                <% end %>
                <% end %>
                <%= link_to admin_manage_student_user_financier_subscription_path(@student.id, subscription.id), method: :get, remote: true, class: "btn btn-light-warning font-weight-bold btn-icon mr-2" do %>
                <i class="fas fa-info-circle"></i>
                <% end %>
                <div class="dropdown dropdown-inline">
                    <a href="#" class="btn btn-primary dropdown-toggle" data-toggle="dropdown" aria-haspopup="true"
                        aria-expanded="false">
                        Actions
                    </a>
                    <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                        <!--begin::Navigation-->
                        <ul class="navi navi-hover">
                            <% if (can? :edit, subscription) && subscription.can_update %>
                            <li class="navi-item">
                                <%= link_to edit_admin_manage_student_user_financier_subscription_path(@student.id, subscription.id), method: :get, remote: true, class: "navi-link" do %>
                                <span class="navi-icon">
                                    <i class="flaticon2-edit"></i>
                                </span>
                                <span class="navi-text">Modifier la souscription</span>
                                <% end %>
                            </li>
                            <% end %>
                            <% if (can? :attestation_scolarite, subscription) && (subscription.apprentissage? or subscription.is_frais_inscription_payed) %>
                            <li class="navi-item">
                                <%= link_to attestation_scolarite_admin_manage_student_user_financier_subscription_path(@student.uuid, subscription.id), method: :get, remote: false, class: "navi-link" do %>
                                <span class="navi-icon">
                                    <i class="flaticon2-file"></i>
                                </span>
                                <span class="navi-text">Attestation scolarité</span>
                                <% end %>
                            </li>
                            <% end %>
                            <% if subscription.can_update %>
                            <% if (can? :launch_discount, subscription) && subscription.reduction == 0 %>
                            <li class="navi-item">
                                <%= link_to launch_discount_admin_manage_student_user_financier_subscription_path(@student.id, subscription.id), method: :get, remote: true, class: "navi-link" do %>
                                <span class="navi-icon">
                                    <i class="flaticon2-percentage"></i>
                                </span>
                                <span class="navi-text">Appliquer remise commerciale</span>
                                <% end %>
                            </li>
                            <% else %>
                            <li class="navi-item">
                                <%= link_to new_admin_accounting_accounting_alert_path(user_financier_subscription_id: subscription.id), method: :get, remote: true, class: "navi-link" do %>
                                <span class="navi-icon">
                                    <i class="flaticon2-percentage"></i>
                                </span>
                                <span class="navi-text">Signaler une remise commerciale</span>
                                <% end %>
                            </li>
                            <% end %>
                            <% end %>
                            <% if (can? :launch_change_formation, subscription) && subscription.can_update %>
                            <li class="navi-item">
                                <%= link_to launch_change_formation_admin_manage_student_user_financier_subscription_path(@student.id, subscription.id), method: :get, remote: true, class: "navi-link" do %>
                                <span class="navi-icon">
                                    <i class="flaticon2-layers"></i>
                                </span>
                                <span class="navi-text">Modifier la formation</span>
                                <% end %>
                            </li>
                            <% end %>
                            <% if (can? :launch_change_statut, subscription) && subscription.can_update %>
                            <li class="navi-item">
                                <%= link_to launch_change_statut_admin_manage_student_user_financier_subscription_path(@student.id, subscription.id), method: :get, remote: true, class: "navi-link" do %>
                                <span class="navi-icon">
                                    <i class="flaticon2-user-1"></i>
                                </span>
                                <span class="navi-text">Modifier le statut étudiant</span>
                                <% end %>
                            </li>
                            <% end %>
                            <% if subscription.can_update %>
                            <% if (can? :launch_closure, subscription) && subscription.can_update %>
                            <li class="navi-item">
                                <%= link_to launch_closure_admin_manage_student_user_financier_subscription_path(@student.id, subscription.id), method: :get, remote: true, class: "navi-link" do %>
                                <span class="navi-icon">
                                    <i class="flaticon2-cancel-music"></i>
                                </span>
                                <span class="navi-text">Appliquer une clôture</span>
                                <% end %>
                            </li>
                            <% else %>
                            <li class="navi-item">
                                <%= link_to new_admin_accounting_accounting_alert_path(user_financier_subscription_id: subscription.id), method: :get, remote: true, class: "navi-link" do %>
                                <span class="navi-icon">
                                    <i class="flaticon2-cancel-music"></i>
                                </span>
                                <span class="navi-text">Signaler une clôture</span>
                                <% end %>
                            </li>
                            <% end %>
                            <% end %>
                            <% if (can? :cancel_closure, subscription) && (subscription.demission_before_start? or subscription.demission? or subscription.exclusion?) %>
                            <li class="navi-item">
                                <%= link_to cancel_closure_admin_manage_student_user_financier_subscription_path(@student.id, subscription.id), method: :post, remote: true, class: "navi-link" do %>
                                <span class="navi-icon">
                                    <i class="flaticon2-cancel-music"></i>
                                </span>
                                <span class="navi-text">Annuler la clôture</span>
                                <% end %>
                            </li>
                            <% end %>
                            <% if (can? :destroy, subscription) && subscription.can_cancel %>
                            <li class="navi-item">
                                <%= link_to admin_manage_student_user_financier_subscription_path(@student.id, subscription.id), method: :delete, remote: true, class: "navi-link", data: {confirm: "Confirmez vous l'annulation de cette souscription ?"} do %>
                                <span class="navi-icon">
                                    <i class="flaticon2-rubbish-bin-delete-button"></i>
                                </span>
                                <span class="navi-text">Annuler la souscription</span>
                                <% end %>
                            </li>
                            <% end %>


                        </ul>
                        <!--end::Navigation-->
                    </div>
                </div>
            </div>
            <!--end::Toolbar-->
        </div>
        <!--end::Section-->
        <!--begin::Content-->
        <div class="d-flex flex-wrap mt-7">
            <div class="mr-12 d-flex flex-column ">
                <span class="d-block font-weight-bold mb-3 text-dark-50">Statut</span>
                <%= subscription.statut_humanized_label.html_safe %>
            </div>
            <div class="mr-12 d-flex flex-column ">
                <span class="d-block font-weight-bold mb-2 text-dark-50">Type</span>
                <span class="font-weight-bolder font-size-h6 pt-1">
                    <%= subscription.statut_etu.humanize %>
                </span>
            </div>
            <div class="mr-12 d-flex flex-column ">
                <span class="d-block font-weight-bold mb-2 text-dark-50">Modalité</span>
                <span class="font-weight-bolder font-size-h6 pt-1">
                    <%= subscription.modalite %> fois</span>
            </div>
            <% if subscription.reduction != 0 %>
            <div class="mr-12 d-flex flex-column ">
                <span class="d-block font-weight-bold mb-2 text-dark-50">Remise</span>
                <span class="font-weight-bolder font-size-h6 pt-1">
                    <%= subscription.reduction %>€</span>
            </div>
            <% end %>
            <div class="mr-12 d-flex flex-column ">
                <span class="d-block font-weight-bold mb-2 text-dark-50">Base tarifaire</span>
                <span class="font-weight-bolder font-size-h6 pt-1">
                    <%= subscription.formation_annee.formation.centre.nom %> -
                    <%= subscription.formation_annee.school_year.nom.humanize %>
                </span>
            </div>
            <!--end::Item-->

        </div>
        <!--end::Content-->
    </div>
    <!--end::Body-->

</div>

<% end %>