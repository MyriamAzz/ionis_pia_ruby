<div class="card card-custom">
    <!--begin::Header-->
    <div class="card-header py-3">
        <div class="card-title align-items-start flex-column">
            <h3 class="card-label font-weight-bolder text-dark">Souscriptions</h3>
            <span class="text-muted font-weight-bold font-size-sm mt-1">Gestion des formations de l'étudiant(e)</span>
        </div>
        <div class="card-toolbar">
            <% if can? :create, UserFinancierSubscription %>
            <%= link_to new_admin_manage_student_user_financier_subscription_path(student_id: @student.uuid), remote: true, class: "btn btn-success font-weight-bolder" do %>
            <i class="fas fa-plus-circle"></i>
            Ajouter une souscription
            <% end %>
            <% end %>
        </div>
    </div>
    <!--end::Header-->
    <!--begin::Form-->
    <!--begin::Body-->
    <% if !@student.user_financier.user_financier_subscriptions.any? %>
