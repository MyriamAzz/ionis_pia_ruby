<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Cr√©er une alerte</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i aria-hidden="true" class="ki ki-close"></i>
            </button>
        </div>
        <div class="modal-body">
            <%= form_for @accounting_alert ,:url => { :controller => "accounting_alerts", :action => "create" }, remote: :true, html: { style: "display:inline;" } do |f| %>
            <%= f.hidden_field :user_financier_subscription_id, value: params[:user_financier_subscription_id] %>
            <div class="alert alert-secondary" role="alert">
                L'alerte sera transmise au service comptable pour traitement.
            </div>
            <div class="row">
                <div class="form-group col-12">
                    <label class="col-form-label">Type *</label>
                    <%= f.select :atype, @types.map { |a| [a.humanize, a]}.sort {|a, b| a[0] <=> b[0]}, {}, include_blank: true, class: "form-control", required: true %>
                </div>

                <div class="form-group col-12 divfc1" style="display: none;">
                    <label class="col-form-label fc1-label"></label>
                    <%= f.number_field :amount, class: "form-control fc1", required: true %>
                </div>

                <div class="form-group col-12">
                    <label class="col-form-label">Message *</label>
                    <%= f.text_area :comment, class: "form-control", maxlength: 255, required: true %>
                </div>

            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-light-warning font-weight-bold" data-dismiss="modal">Annuler</button>
            <button type="submit" class="btn btn-success font-weight-bold" value="submit"
                form="new_accounting_alert">Envoyer</button>
        </div>
        <% end %>
    </div>
</div>