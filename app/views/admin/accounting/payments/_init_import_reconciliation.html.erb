<div class="modal-dialog" role="document">
  <div class="modal-content">
    <div class="modal-header">
      <h5 class="modal-title" id="exampleModalLabel">Importation des réconciliations</h5>
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <i aria-hidden="true" class="ki ki-close"></i>
      </button>
    </div>
    <div class="modal-body">
      <%= form_tag(import_reconciliation_admin_accounting_payments_path, method: :post, remote: :true, id: "init_import_form", multipart: true) do |f| %>
      <div class="form-group alert alert-warning">
        Cette fonction d'import assure seulement la reconciliation des paiements validés.
      </div>
      <div class="form-group alert alert-light">
        <a href="/import_reconciliations_exemple.csv" target="_blank" class="font-weight-bold">Cliquez-ici pour
          télécharger le
          fichier
          d'exemple</a>
      </div>
      <div class="form-group row">
        <div class="col-lg-12">
          <label for="">Fichier CSV
            <span class="text-danger">*</span></label>
          <%= file_field_tag :file, class: "form-control", :required => true, accept: '.csv' %>
        </div>
      </div>
    </div>
    <div class="modal-footer">
      <button type="button" class="btn btn-light-warning font-weight-bold" data-dismiss="modal">Annuler</button>
      <button type="submit" class="btn btn-success font-weight-bold" value="submit" form="init_import_form"
        data-disable-with="Chargement...">Charger</button>
    </div>
    <% end %>
  </div>
</div>