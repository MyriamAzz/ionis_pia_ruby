<script>
    $(function () {
        // limits the number of formations_annees_4
        $('#add-formations_annees_<%= school_year.id %> a').on('click', function () {
            $('#add-formations_annees_<%= school_year.id %> a').hide();
        });

        $('#delete-formations_annees_<%= school_year.id %> a').on('click', function () {
            $('#add-formations_annees_<%= school_year.id %> a').show();
        });

        if ($('#formations_annees_<%= school_year.id %> .nested-fields').length == 1) {
            $('#add-formations_annees_<%= school_year.id %> a').hide();
        } else {
            $('#add-formations_annees_<%= school_year.id %> a').show();
        }
    })
</script>
