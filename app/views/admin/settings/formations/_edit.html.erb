<div class="modal-dialog" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modification formation</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i aria-hidden="true" class="ki ki-close"></i>
            </button>
        </div>
        <div class="modal-body">
            <div class="row mb-5">
                <div class="col-lg-6">
                    <span class="text-muted font-weight-bold">Créée le
                        <%= @formation.created_at.strftime("%d/%m/%Y à %H:%M") %></span>
                </div>
                <div class="col-lg-6">
                    <span class="text-muted font-weight-bold">Modifiée le
                        <%= @formation.updated_at.strftime("%d/%m/%Y à %H:%M") %></span>
                </div>
            </div>
            <%= form_for @formation ,:url => { :controller => "formations", :action => "update" }, remote: :true do |f| %>
            <div class="form-group">
                <div class="checkbox-inline">
                    <label class="checkbox checkbox-warning">
                        <%= f.check_box :archived %>
                        <span></span>Archiver</label>
                </div>
            </div>
            <div class="form-group">
                <label>Libellé *</label>
                <%= f.text_field :nom, class: "form-control", placeholder: "ex : Bachelor Game & Creative Coding", :required => true %>
            </div>
            <div class="form-group">
                <label>Code produit *</label>
                <%= f.text_field :code, class: "form-control", placeholder: "BGD1", :required => false %>
            </div>
            <div class="form-group">
                <label>Compte de produit Sage</label>
                <%= f.text_field :compte_produit_sage, class: "form-control", placeholder: "70641001", :required => false %>
            </div>

        </div>
        <div class="modal-footer">
            <% if can? :destroy, UserAdmin %>
            <%= link_to admin_settings_formation_path(@formation), remote: true, method: :delete, class: "btn btn-light-danger", data: {confirm: "Confirmez-vous la suppression ?"} do %>
            Supprimer
            <% end %>
            <% end %>
            <button type="button" class="btn btn-light-warning font-weight-bold" data-dismiss="modal">Annuler</button>
            <button type="submit" class="btn btn-success font-weight-bold" value="submit"
                form="edit_formation_<%= @formation.id %>">Enregistrer</button>
        </div>
        <% end %>
    </div>
</div>