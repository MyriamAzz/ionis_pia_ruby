<div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Ajout campus</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i aria-hidden="true" class="ki ki-close"></i>
            </button>
        </div>
        <div class="modal-body">
            <%= form_for @campu ,:url => { :controller => "campus", :action => "create" }, remote: :true, html: { style: "display:inline;" } do |f| %>
            <div class="row">
                <div class="form-group col-12">
                    <label>Nom</label>
                    <%= f.text_field :nom, class: "form-control", :required => true %>
                </div>
                <div class="form-group col-12">
                    <label>Adresse</label>
                    <%= f.text_field :adresse, class: "form-control", :required => true %>
                </div>
                <div class="form-group col-6">
                    <label>Code postal</label>
                    <%= f.text_field :cp, class: "form-control", :required => true %>
                </div>
                <div class="form-group col-6">
                    <label>Ville</label>
                    <%= f.text_field :ville, class: "form-control", :required => true %>
                </div>
                <div class="form-group col-6">
                    <label>Ville abrégé</label>
                    <%= f.text_field :acronyme, class: "form-control", placeholder: "ex: BDX (Bordeaux)", :required => true, maxlength: 5 %>
                </div>
                <div class="form-group col-6">
                    <label>Téléphone</label>
                    <%= f.text_field :tel, class: "form-control", :required => true %>
                </div>
                <div class="form-group col-6">
                    <label>SIRET</label>
                    <%= f.text_field :siret, class: "form-control", :required => false %>
                </div>
                <div class="form-group col-6">
                    <label>Numéro Immatriculation</label>
                    <%= f.text_field :num_immatriculation, class: "form-control", :required => false %>
                </div>
                <div class="form-group col-4">
                    <label>Code analytique Sage</label>
                    <%= f.text_field :code_sage, class: "form-control", :required => false, placeholder: "0001" %>
                </div>
                <div class="form-group col-4">
                    <label>Compte banque (512)</label>
                    <%= f.text_field :compte_banque_sage, class: "form-control", :required => false %>
                </div>
                <div class="form-group col-4">
                    <label>Compte d'attente (511)</label>
                    <%= f.text_field :compte_attente_sage, class: "form-control", :required => false %>
                </div>

                <div class="col-12 mb-5 mt-5">
                    <h6>Comptabilité - Comptes clients</h6>
                </div>
                <%= f.fields_for :centre_customer_accounts do |ff| %>
                <%= ff.hidden_field :school_year_id, class: "form-control", :required => false %>
                <div class="form-group col-4">
                    <label>Année <%= ff.object.school_year.nom %></label>
                    <%= ff.text_field :compte_client_sage, class: "form-control", :required => false, placeholder: "41166000" %>
                </div>
                <% end %>

            </div>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-light-warning font-weight-bold" data-dismiss="modal">Annuler</button>
            <button type="submit" class="btn btn-success font-weight-bold" value="submit"
                form="new_centre">Enregistrer</button>
        </div>
        <% end %>
    </div>
</div>