<%= render "auths/layouts/top" %>
<!--begin::Signin-->
<div class="login-form">
	<!--begin::Form-->
	<%= form_for(resource, as: resource_name, url: session_path(resource_name, p: params[:p]), id: "kt_login_singin_form" ) do |f| %>
	<!--begin::Title-->
	<div class="pb-5 pb-lg-15">
		<h3 class="font-weight-bolder text-dark font-size-h2 font-size-h1-lg">Plateforme PIA
		</h3>

	</div>
	<% if flash.alert %>
	<div class="alert alert-custom alert-notice alert-light-danger fade show mb-15" role="alert">
		<div class="alert-icon">
			<i class="flaticon-warning"></i>
		</div>
		<div class="alert-text"><%= flash.alert %></div>
		<div class="alert-close">
			<button type="button" class="close" data-dismiss="alert" aria-label="Close">
				<span aria-hidden="true">
					<i class="ki ki-close"></i>
				</span>
			</button>
		</div>
	</div>
	<% end %>
	<!--begin::Title-->
	<!--begin::Form group-->
	<div class="form-group">
		<div class="d-flex justify-content-between mt-n5">
			<label class="font-size-h6 font-weight-bolder text-dark pt-5">Login</label>
			<a href="<%= email_oublie_path(p: params[:p]) %>"
				class="text-primary font-size-h6 font-weight-bolder text-hover-primary pt-5">Login
				oublié ?</a>
		</div>
		<%= f.text_field :username, autofocus: true, autocomplete: "username", class: "form-control form-control-solid h-auto py-7 px-6 rounded-lg border-0", required: true %>

	</div>
	<!--end::Form group-->
	<!--begin::Form group-->
	<div class="form-group">
		<div class="d-flex justify-content-between mt-n5">
			<label class="font-size-h6 font-weight-bolder text-dark pt-5">Mot de passe</label>

			<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
			<a href="<%= new_password_path(resource_name, p: params[:p]) %>"
				class="text-primary font-size-h6 font-weight-bolder text-hover-primary pt-5">Mot de
				passe oublié ?</a>
			<% end %>
		</div>
		<%= f.password_field :password, autocomplete: "off", class: "form-control form-control-solid h-auto py-7 px-6 rounded-lg border-0", required: true %>
	</div>
	<!--end::Form group-->
	<% if devise_mapping.rememberable? %>
	<div class="form-group">
		<div class="checkbox-list">
			<label class="checkbox">
				<%= f.check_box :remember_me %>
				<span></span><strong>Se souvenir de moi</strong></label>
		</div>
	</div>
	<% end %>

	<!--begin::Action-->
	<div class="pb-lg-0 pb-5">
		<button type="submit" id="kt_login_singin_form_submit_button"
			class="btn btn-primary font-weight-bolder font-size-h6 px-8 py-4 my-3 mr-3">Connexion</button>

	</div>
	<!--end::Action-->
	<% end %>
	<!--end::Form-->
</div>
<!--end::Signin-->


</div>
<!--end::Wrapper-->
</div>
<!--begin::Content-->
<%= render "auths/layouts/footer" %>