                </div>

            </div>
        </div>
    </div>
    <div class="col-lg-12">
        <!--begin::Card-->
        <div class="card card-custom card-stretch">
            <!--begin::Header-->
            <div class="card-header py-3">
                <div class="card-title">
                    <h3 class="card-label font-weight-bolder text-dark">Informations Personnelles</h3>
                </div>
            </div>
            <!--end::Header-->
            <!--begin::Form-->
            <!--begin::Body-->
            <div class="card-body">


                <%= form_for @user, { :url => user_reinscription_confirm_path(params[:id]), remote: true, :method => :post } do |f| %>
                <div class="row">
                    <label class="col-xl-2"></label>
                    <div class="col-lg-9 col-xl-6">
                        <h5 class="font-weight-bold mb-6">Étudiant(e)</h5>
                    </div>
                </div>
                <%= f.fields_for :user_financier do |user_financier|%>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Nom</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= user_financier.text_field :etu_nom, class: "form-control form-control-lg form-control-solid", :required => true, disabled: true %>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Prénom</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= user_financier.text_field :etu_prenom, class: "form-control form-control-lg form-control-solid", :required => true, disabled: true %>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Email</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= user_financier.email_field :etu_email, class: "form-control form-control-lg form-control-solid", :required => true, disabled: true %>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Téléphone</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= user_financier.text_field :etu_tel, class: "form-control form-control-lg ", :required => true %>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Adresse</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= user_financier.text_field :etu_adresse, class: "form-control form-control-lg ", :required => true %>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Ville</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= user_financier.text_field :etu_ville, class: "form-control form-control-lg ", :required => true %>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Code Postal</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= user_financier.text_field :etu_code_postal, class: "form-control form-control-lg ", :required => true %>
                    </div>
                </div>

                <div class="row">
                    <label class="col-xl-2"></label>
                    <div class="col-lg-9 col-xl-6">
                        <h5 class="font-weight-bold mt-10 mb-6">Responsable Financier</h5>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Nom</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= user_financier.text_field :nom, class: "form-control form-control-lg", :required => true %>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Prénom</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= user_financier.text_field :prenom, class: "form-control form-control-lg", :required => true %>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Email</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= f.email_field :email, class: "form-control form-control-lg", :required => true %>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Téléphone</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= user_financier.text_field :tel, class: "form-control form-control-lg", :required => true %>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Adresse</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= user_financier.text_field :adresse, class: "form-control form-control-lg", :required => true %>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Code postal</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= user_financier.text_field :code_postal, class: "form-control form-control-lg", :required => true %>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Ville</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= user_financier.text_field :ville, class: "form-control form-control-lg", :required => true %>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Pays</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= user_financier.text_field :pays, class: "form-control form-control-lg", :required => true %>
                    </div>
                </div>
                <div class="row">
                    <label class="col-xl-2"></label>
                    <div class="col-lg-9 col-xl-6">
                        <h5 class="font-weight-bold mt-10 mb-6">Choix du mode de versement
                            du solde de la scolarité</h5>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">1er Frais de scolarité</label>
                    <div class="col-lg-9 col-xl-6">
                        <div class="font-weight-bolder font-size-h6 pt-2">
                            <%= @subscription.formation_annee.frais_inscription.round() %>€</div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Mode paiement<br>1er Frais de scolarité</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= select_tag :payment_mode_inscription, options_for_select([["Prélèvement", "prelevement"], ["Virement","virement"]]), include_blank: "Veuillez choisir une option", class: "form-control form-control-lg", :required => true %>
                    </div>
                </div>
                <% if !@subscription.formation_annee.frais_technique.nil? %>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Frais techniques</label>
                    <div class="col-lg-9 col-xl-6">
                        <div class="font-weight-bolder font-size-h6 pt-2">
                            <%= @subscription.formation_annee.frais_technique.round() %>€</div>
                    </div>
                </div>
                <% end %>

                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Choix modalité<br>Frais de scolarité</label>
                    <div class="col-lg-10">
                        <div class="row">
                            <% @user.user_financier.centre.school_program.payment_plans.each do |plan| %>
                            <div class="col-lg-4">
                                <label class="option">
                                    <span class="option-control">
                                        <span class="radio radio-bold radio-brand" />
                                        <input type="radio" name="modalite" value="<%= plan.plan %>" required="true" />
                                        <span></span>
                                    </span>
                                    </span>
                                    <span class="option-label">
                                        <span class="option-head">
                                            <span class="option-title">
                                                Règlement en <%= plan.plan %> fois :
                                                <%= @subscription.formation_annee.read_attribute("modalite_#{plan.plan}") %>€
                                            </span>

                                        </span>
                                        <span class="option-body">

                                            <% @subscription.school_year.payment_calendars.where(plan: plan.plan).each do |date| %>
                                            Le <%= date.plan_date.strftime("%d/%m/%Y") %><br>
                                            <% end %>

                                        </span>
                                    </span>
                                </label>
                            </div>
                            <% end %>


                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Mode paiement<br>Frais de scolarité</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= select_tag :payment_mode_scolarite, options_for_select([["Prélèvement", "prelevement"], ["Virement","virement"]]), include_blank: "Veuillez choisir une option", class: "form-control form-control-lg", :required => true %>
                    </div>
                </div>
                <div class="form-group row mt-10">
                    <label class="col-xl-2 col-lg-2 col-form-label"></label>
                    <div class="col-lg-9 col-xl-6">
                        <%= button_tag type: :submit, class: "btn btn-success btn-lg font-weight-bold", data: { confirm: "Confirmez-vous les informations ?", disable_with: "Transfert en cours..."} do %>
                        <i class="fas fa-paper-plane"></i> Je confirme les informations et la réinscription
                        <% end %>
                    </div>
                </div>
                <% end %>
                <% end %>
            </div>
            <!--end::Body-->
            <!--end::Form-->
        </div>
    </div>

    <!--end::Content-->
</div>