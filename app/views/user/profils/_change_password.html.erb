<% if can? :update_password, :profil %>
<div class="row">
    <div class="col-lg-12 mt-5">
        <!--begin::Card-->
        <div class="card card-custom card-stretch">
            <!--begin::Header-->
            <div class="card-header py-3">
                <div class="card-title align-items-start flex-column">
                    <h3 class="card-label font-weight-bolder text-dark">Mot de passe</h3>
                    <span class="text-muted font-weight-bold font-size-sm mt-1">Modification</span>
                </div>
                <div class="card-toolbar">

                </div>
            </div>
            <!--end::Header-->
            <!--begin::Form-->
            <!--begin::Body-->
            <div class="card-body">
                <%= form_for current_user, url: update_password_user_profil_path, method: :patch, :html => { id: "updatePassword" }, remote: true do |f| %>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Nouveau mot de passe<br>8 caract√®res minimum</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= f.password_field :password, class: "form-control form-control-lg", :required => true %>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label">Confirmation</label>
                    <div class="col-lg-9 col-xl-6">
                        <%= f.password_field :password_confirmation, class: "form-control form-control-lg", :required => true %>
                    </div>
                </div>

                <div class="form-group row">
                    <label class="col-xl-2 col-lg-2 col-form-label"></label>
                    <div class="col-lg-9 col-xl-6">
                        <button type="submit" class="btn btn-success mr-2" form="updatePassword"
                            data-disabled-with="Enregistrement...">Confirmer la modification</button>
                        <button type="reset" form="updatePassword" class="btn btn-secondary">Annuler</button>
                    </div>
                </div>

                <% end %>
            </div>
            <!--end::Body-->
            <!--end::Form-->
        </div>
    </div>
</div>
<% end %>