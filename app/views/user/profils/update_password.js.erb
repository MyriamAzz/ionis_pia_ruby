<% if @error == "password" %>
    toastr.error("Les mots de passe ne correspondent pas")
<% elsif @error == "limit" %>
    toastr.error("Mot de passe trop court. Doit contenir au minimum 8 caractères.")
<% elsif @error == "erreur" %>
    toastr.error("Erreur")
<% else %>
    $("#change_password").html("<%= escape_javascript(render partial: 'change_password') %>")
    toastr.success("Mot de passe modifié")
<% end %>