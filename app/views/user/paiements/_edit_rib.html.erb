<div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="exampleModalLabel">Modification coordonn√©es bancaires</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <i aria-hidden="true" class="ki ki-close"></i>
            </button>
        </div>
        <div class="modal-body">
            <%= form_for @user_financier_rib ,:url => { :controller => "paiements", :action => "update_rib" }, remote: :true do |f| %>

            <div class="form-group">
                <label>IBAN</label>
                <%= f.text_field :iban, class: "form-control form-control-lg form-control-solid", :required => true %>
            </div>

            <div class="form-group">
                <label>BIC</label>
                <%= f.text_field :bic, class: "form-control form-control-lg form-control-solid", :required => true %>
            </div>

            <% end %>
        </div>
        <div class="modal-footer">
            <button type="button" class="btn btn-light-danger font-weight-bold" data-dismiss="modal">Annuler</button>
            <button type="submit" class="btn btn-warning font-weight-bold" value="submit"
                form="edit_user_financier_rib_<%= @user_financier_rib.id %>">Je confirme la modification</button>
        </div>
    </div>
</div>